{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "autoupdate": false,
  // "small_model": "openrouter/google/gemini-2.5-flash-lite",
  "small_model": "openrouter/openai/gpt-oss-20b",

  "permission": {
    "bash": {
      "*": "allow",
      "git commit *": "ask",
      "git push *": "ask",
      "git clone *": "ask",
      "mv *": "ask",
      "rm *": "ask",
    },
  },

  "disabled_providers": [],
  "keybinds": {
    // "session_child_cycle": "ctrl+alt+right",
    // "session_child_cycle_reverse": "ctrl+alt+left",
  },

  "tui": {
    "scroll_speed": 5,
  },

  "formatter": {
    "gofmt": { "disabled": false },
    "mix": { "disabled": true },
    "prettier": { "disabled": false },
    "biome": { "disabled": true },
    "zig": { "disabled": true },
    "clang-format": { "disabled": true },
    "ktlint": { "disabled": true },
    "ruff": { "disabled": true },
    "rubocop": { "disabled": true },
    "standardrb": { "disabled": true },
    "htmlbeautifier": { "disabled": true },
  },

  "lsp": {
    // "typescript": { "disabled": true },
    "eslint": { "disabled": true },
    "gopls": { "disabled": true },
    "ruby-lsp": { "disabled": true },
    "pyright": { "disabled": true },
    "elixir-ls": { "disabled": true },
    "zls": { "disabled": true },
    "csharp": { "disabled": true },
    "vue": { "disabled": true },
    "rust": { "disabled": true },
    "clangd": { "disabled": true },
    "svelte": { "disabled": true },
  },

  "mcp": {
    "context7": {
      // "type": "remote",
      // "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
    },
    "figma-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["/usr/bin/npx", "-y", "figma-developer-mcp", "--stdio"],
    },

    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": ["/usr/bin/npx", "-y", "chrome-devtools-mcp@latest"],
    },
  },

  "agent": {
    "creative": {
      "temperature": 1,
    },

    "build": {
      "temperature": 0.2,
    },
  },

  "provider": {
    "anthropic": {
      "models": {
        "sonnet-4-5-thinker": {
          "id": "claude-sonnet-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000,
            },
          },
        },

        "claude-sonnet-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 5000,
            },
          },
        },

        "claude-sonnet-4-5-20250929": {
          "name": "Claude Sonnet 4.5 09-29",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 5000,
            },
          },
        },

        "claude-haiku-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 5000,
            },
          },
        },

        "claude-haiku-4-5-20251001": {
          "name": "Claude Haiku 4.5 10-01",

          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 5000,
            },
          },
        },
      },
    },

    "google": {
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}",
      },
    },

    "deepseek": {
      "options": {
        "apiKey": "{env:DEEPSEEK_API_KEY}",
      },
    },

    "openrouter": {
      // "npm": "@openrouter/ai-sdk-provider",

      "options": {
        "apiKey": "{env:OPENROUTER_API_KEY}",
      },

      "models": {
        "moonshotai/kimi-k2.5": {
          "options": {
            "provider": {
              "order": ["moonshotai/int4"],
              "allow_fallbacks": false,
            },
          },
        },

        "minimax/minimax-m2.5": {
          "options": {
            "provider": {
              "order": ["minimax/fp8"],
              "allow_fallbacks": false,
            },
          },
        },

        "z-ai/glm-5": {
          "options": {
            "provider": {
              "order": ["z-ai"],
              "allow_fallbacks": false,
            },
          },
        },

        "google/gemini-3-flash-preview": {
          "options": {
            "provider": {
              "order": ["google-ai-studio"],
              "allow_fallbacks": false,
            },
          },
        },

        "google/gemini-3-pro-preview": {
          "options": {
            "provider": {
              "order": ["google-ai-studio"],
              "allow_fallbacks": false,
            },
          },
        },

        "openai/gpt-oss-120b": {
          "options": {
            "provider": {
              "require_parameters": true,
              "order": ["groq"],
              "allow_fallbacks": false,
            },
          },
        },

        "openai/gpt-oss-20b": {
          "options": {
            "provider": {
              "order": ["groq"],
              "allow_fallbacks": false,
            },
          },
        },
      },
    },
  },
}
